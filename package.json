{
  "name": "devibe",
  "version": "2.1.0",
  "description": "Intelligent repository cleanup with auto mode, AI learning, markdown consolidation, auto-consolidate workflow, context-aware classification, and cost optimization",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "devibe": "./dist/cli.js",
    "unvibe": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "ANTHROPIC_API_KEY= OPENAI_API_KEY= vitest run",
    "test:watch": "ANTHROPIC_API_KEY= OPENAI_API_KEY= vitest",
    "test:coverage": "ANTHROPIC_API_KEY= OPENAI_API_KEY= vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "dev": "tsx src/cli.ts",
    "postinstall": "bash scripts/setup-hooks.sh 2>/dev/null || true"
  },
  "keywords": [
    "cleanup",
    "repository",
    "monorepo",
    "test-organization",
    "best-practices",
    "secret-detection",
    "rule-pack",
    "devtools",
    "ai",
    "auto-mode",
    "automation",
    "ai-learning",
    "machine-learning",
    "intelligent-classification",
    "cost-optimization",
    "context-aware",
    "typescript",
    "nodejs",
    "react",
    "python",
    "go",
    "java",
    "dotnet"
  ],
  "author": "Ricardo Vega",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOLOVibeCode/devibe.git"
  },
  "bugs": {
    "url": "https://github.com/YOLOVibeCode/devibe/issues"
  },
  "homepage": "https://github.com/YOLOVibeCode/devibe#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "rulepacks",
    "scripts",
    "README.md",
    "LICENSE",
    "RULE_PACK_SPEC.md",
    "QUICK_REFERENCE.md",
    "AUTO_MODE.md"
  ],
  "devDependencies": {
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "fast-glob": "^3.3.3",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  }
}
